{
  "name": "discorcabot",
  "version": "1.0.0",
  "description": "node.js Discord bot",
  "main": "./dist/discorcabot.js",
  "author": "emyarod",
  "license": "MIT",
  "keywords": [
    "node.js",
    "discord",
    "bot"
  ],
  "bugs": {
    "url": "https://github.com/emyarod/discorcabot/issues"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json -c tslint.json 'src/**/*.ts'",
    "clean": "rimraf dist",
    "prebuild": "npm run clean && mkdir dist",
    "build": "webpack --mode=production --config webpack.config.babel.js",
    "dev": "webpack --mode=development --config webpack.config.babel.js && node dist/discorcabot",
    "start": "nodemon --watch src -e ts --verbose --exec npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emyarod/discorcabot.git"
  },
  "homepage": "https://github.com/emyarod/discorcabot#readme",
  "dependencies": {
    "bufferutil": "^4.0.0",
    "discord.js": "^11.3.2",
    "erlpack": "github:hammerandchisel/erlpack",
    "ffmpeg-binaries": "^4.0.0",
    "libsodium-wrappers": "^0.7.3",
    "node-fetch": "^2.2.0",
    "node-opus": "^0.3.0",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "uws": "^10.148.2"
  },
  "devDependencies": {
    "@types/node": "^10.5.7",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "jest": "^23.4.2",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "babel": {
    "presets": [
      "env"
    ]
  }
}
